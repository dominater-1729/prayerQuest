<script>
    $(document).ready(function () {
        $(".invite-list").click(function (event) {
            console.log("this", this)
            const groupId = $(this).attr("groupid");
            console.log(groupId);

            $.ajax({
                url: `/website/list/non-members/${groupId}`,
                type: 'GET',
                dataType: 'json', // added data type
                success: function (res) {
                    console.log("res", res);
                    $("#invite").modal("show");

                    let data = "";

                    res.forEach(el => {
                        data += ` <li class="invite-person">
                                <a href="">
                                    <div class="person-imgg d-flex align-items-center gap-3">
                                        <img src="../../assets/images/userImage/${el.image}" alt="" width="60" height="60"
                                            class="rounded-circle">
                                        <p class="mb-0 fw-600 fs-16 text-color">${el.name}</p>
                                    </div>
                                </a>
                                <a href = "/website/invite/${groupId}/${el.id}" class="fs-16 text-green fw-600" id = "xyz">Invite</a>
                            </li>`
                    })

                    $('#scroll').html(data);
                },
            });

        })
    })
</script>

<script>
    $(document).ready(function () {
        $('#list-search').on('keyup', function () {
            var searchText = $(this).val().toLowerCase();
            $('tbody tr').each(function () {
                var name = $(this).find('td:nth-child(3)').text().toLowerCase();
                if (name.startsWith(searchText)) {
                    $(this).show();
                } else {
                    $(this).hide();
                }
            });
        });
    });
</script>